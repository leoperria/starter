{
  "name": "starter-server",
  "version": "1.0.0",
  "description": "Starter project - Server",
  "author": "Leonardo Perria",
  "license": "MIT",
  "scripts": {
    "start": "yarn run serve",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/index.js",
    "watch-test": "yarn run test -- --watchAll",
    "build-ts": "tsc",
    "build": "yarn run build-ts && yarn run lint",
    "test": "jest --forceExit --coverage --verbose",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/index.js"
  },
  "dependencies": {
    "inversify": "^5.0.1",
    "lodash": "^4.17.15",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/node": "^12.12.26",
    "@types/jest": "^25.1.1",
    "@types/lodash": "^4.14.149",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "@types/concurrently": "^4.1.0",
    "@types/eslint": "^6.1.1",
    "@types/supertest": "^2.0.8",
    "@types/winston": "^2.4.4",
    "typescript": "^3.7.5",
    "jest": "^25.1.0",
    "eslint": "^6.8.0",
    "supertest": "^4.0.2",
    "ts-jest": "^25.1.0",
    "ts-node": "^8.6.2",
    "nodemon": "^2.0.2",
    "concurrently": "^5.1.0"
  }
}
